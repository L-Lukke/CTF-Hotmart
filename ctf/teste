
def is_safe(map):
    rows = len(map)
    cols = len(map[0])

    # Encontra a posiÃ§Ã£o do terminal (ğŸ’») e do Loid (ğŸ¥·)
    for r in range(rows):
        for c in range(cols):
            if map[r][c] == 'ğŸ’»':
                terminal_pos = (r, c)
            if map[r][c] == 'ğŸ¥·':
                loid_pos = (r, c)

    # FunÃ§Ã£o para verificar se uma posiÃ§Ã£o estÃ¡ dentro dos limites do mapa
    def in_bounds(r, c):
        return 0 <= r < rows and 0 <= c < cols

    # Verifica as direÃ§Ãµes dos guardas
    def is_guarded(terminal_pos):
        r, c = terminal_pos

        # Verifica se hÃ¡ guardas que possam ver o terminal
        for i in range(rows):
            for j in range(cols):
                if map[i][j] == '^':  # Guarda olhando para cima
                    if j == c and i > r:
                        if all(map[k][j] != 'ğŸ ' for k in range(r + 1, i)):
                            return True
                elif map[i][j] == 'v':  # Guarda olhando para baixo
                    if j == c and i < r:
                        if all(map[k][j] != 'ğŸ ' for k in range(i + 1, r)):
                            return True
                elif map[i][j] == '<':  # Guarda olhando para a esquerda
                    if i == r and j > c:
                        if all(map[i][k] != 'ğŸ ' for k in range(c + 1, j)):
                            return True
                elif map[i][j] == '>':  # Guarda olhando para a direita
                    if i == r and j < c:
                        if all(map[i][k] != 'ğŸ ' for k in range(j + 1, c)):
                            return True

        return False

    # Verifica se o terminal estÃ¡ guardado
    if is_guarded(terminal_pos):
        return "Espere!"
    else:
        return "Vai!"
    